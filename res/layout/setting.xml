<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#FFFCFFFC"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:overScrollMode="always">

    <LinearLayout
        android:id="@+id/linearLayoutHeader"
        android:background="@drawable/bg_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <FrameLayout
                android:id="@+id/frameLayoutLogo"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/header" >
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btOff"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19dp"
                    android:background="@drawable/back" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutHeader"
        android:background="@drawable/bg_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayoutSubHeader"
            android:layout_width="match_parent"
            android:background="#F0ECFF"
            android:layout_height="wrap_content" >

          	<Button
                    android:id="@+id/btActuate"
                    android:background="@drawable/ic_menu_setting"
                    android:layout_width="30dp"
                	android:layout_height="30dp"
                	android:layout_margin="10dp"
                    />

          	<TextView
          	    android:id="@+id/textView1"
          	    android:layout_width="wrap_content"
          	    android:layout_height="wrap_content"
          	    android:text="Setting"
          	    android:textColor="#000000"
          	    android:layout_marginTop="15dp"
          	    android:textAppearance="?android:attr/textAppearanceMedium" />
			
        </LinearLayout>

    </LinearLayout>
    <ScrollView 
	    android:fillViewport="true"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_gravity="center"
	    >
    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
          	
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvIpAddressInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP Address"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/edIpAddress"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="192.168.xxx.xxx" >

                        <requestFocus />
                    </EditText>

                    <TextView
                        android:id="@+id/tvIpAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Format 192.168.xxx.xxx"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#808080" />
                </LinearLayout>

            </LinearLayout>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" >
          	
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvSerialInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UDP Port Serial"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/edPortSerial"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="10001" >

                        <requestFocus />
                    </EditText>
					<TextView
                        android:id="@+id/tvSerialCurrent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Setting:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#808080" />
                    <TextView
                        android:id="@+id/tvSerial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Default Port Serial 10001"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#808080" />
                </LinearLayout>

            </LinearLayout>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" >
          	
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableRow
                    android:id="@+id/TableRow01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <LinearLayout
                        android:id="@+id/LinearLayout02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/LinearLayout03"
                            android:layout_width="265dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tvParalelInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UDP Port Paralel"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/edPortParalel"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="10002" />

                            <TextView
                                android:id="@+id/tvParalel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Default Port Paralel 10002"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#808080" />
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

            </LinearLayout>
     		
           </TableRow>
           <LinearLayout 
               android:layout_width="fill_parent"
               android:layout_marginTop="10dp"
               android:layout_height="wrap_content"
               android:weightSum="100"
               >
               <Button
	            android:id="@+id/btSave"
	            android:layout_weight="50"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Save" />
               <Button
	            android:id="@+id/btRevert"
	            android:layout_weight="50"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Revert" />
           </LinearLayout>
           
    </TableLayout>
	</ScrollView>
</LinearLayout>